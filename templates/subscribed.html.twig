{% extends 'layout.html.twig' %}

{% block title %}Root Diamoons - {{ 'llista_correu' | trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/mailing_list.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block content %}
    <div id="llista_correu" class="primer_bloc ultim_bloc">
        <h2>{{ 'llista_correu' | trans }}</h2>

        <div id="llista_correu_text">
            {% if not error %}
                {{ 'confirm_subs' | trans | raw }}
                <em><strong>{{ email }}</strong></em><br />
                <br />
                <strong>{{ 'gracies' | trans }}</strong>
            {% else %}
                {{ 'error_subs' | trans({'%link%': '<a href="mailto:' ~ info_address ~ '">', '%info_address%': info_address, '%endlink%': '</a>'}) | raw }}<br />
                <br />
            {% endif %}

            {% include 'mailing_list_note.html.twig' %}
        </div>
    </div>
{% endblock %}