{% extends 'layout.html.twig' %}

{% block title %}Root Diamoons - {{ 'contacte' | trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/contact.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block content %}
    <div id="contacte" class="primer_bloc ultim_bloc">
        <h2>{{ 'contacte' | trans }}</h2>
        <div id="mail">
            <img src="{{ asset('images/mail.png') }}" alt="mail" />
        </div>
        <div class="destacat descarregues_contacte">
            <div class="nom_document">{{ 'rider_tecnic' | trans }}</div>
            <div class="descarrega_document">- <a href="{{ asset('documents/rider.pdf') }}">{{ 'descarregar_pdf' | trans }}</a></div>
        </div>
        <div class="destacat descarregues_contacte">
            <div class="nom_document">{{ 'dossier_contractacio' | trans }}</div>
            <div class="descarrega_document">- <a href="{{ asset('documents/dossier.pdf') }}">{{ 'descarregar_pdf' | trans }}</a></div>
        </div>
        <div id="newsletter">
            <a href="{{ path('mailing_list') }}">
                <div>
                    {{ 'subscriute' | trans }}<br />
                    <span>{{ 'llista_correu' | trans }}</span>
                </div>
            </a>
        </div>
        <div id="credits">
            {{ 'disseny' | trans }} <a href="http://www.martilazaro.com" target="_blank">Martí Làzaro</a> / {{ 'programacio' | trans }} <a href="https://www.twitter.com/arnaugmasso" target="_blank">Arnau González</a>
        </div>
    </div>
{% endblock %}