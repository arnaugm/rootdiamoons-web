# This file is a "template" of what your parameters.yml file should look like in dev environment
parameters:
    database_driver:      pdo_sqlite
    database_path:        '%kernel.root_dir%/../test_db/data.db3'
    database_name:        symfony
    database_user:        root
    database_password:    ~
    database_charset:     UTF8

    mailer_transport:     smtp
    mailer_encryption:    ssl
    mailer_host:          127.0.0.1
    mailer_port:          ~
    mailer_user:          example@mail.com
    mailer_password:      ~

    locale:               ca
    app.locales:          ca|en|es

    # A secret key that's used to generate certain security-related tokens
    secret:               ThisTokenIsNotSoSecretChangeIt

    ga_tracking:          ~

    info_address:         example@mail.com
    mailing_list_address: example@mail.com
    subscribe_address:    example@mail.com
    unsubscribe_address:  example@mail.com
